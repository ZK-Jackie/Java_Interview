<?xml version="1.0" encoding="UTF-8" ?>     <!--固定头-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hidrink.mapper.CusMapper">

    <select id="getCus" resultType="com.hidrink.pojo.Cus">
        select * from emp
        <where>     <!--根据情况，mybatis自动调整确认是否加where或过滤and-->
            <if test="name != null and name != ''"> <!--根据条件，mybatis自动调整确认是否需要添加该条件-->
                and username like concat('%', #{name}, '%')
            </if>
            <if test="startDate != null and startDate != ''">
                and create_time &gt;= #{startDate} <!-- &gt;为大于号  &lt;为小于号 -->
            </if>
            <if test="endDate != null and endDate != ''">
                and create_time &lt;= #{endDate}
            </if>
        </where>
        order by update_time desc
    </select>

</mapper>