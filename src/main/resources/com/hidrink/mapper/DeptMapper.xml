<?xml version="1.0" encoding="UTF-8" ?>     <!--固定头-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hidrink.mapper.DeptMapper">

    <resultMap id="mapResult" type="java.util.HashMap">
        <result property="key" column="id" javaType="java.lang.Integer"/>
        <result property="value" column="name" javaType="java.lang.String"/>
    </resultMap>

    <select id="getDeptList" resultMap="mapResult">
        select id,name from dept;
    </select>

</mapper>